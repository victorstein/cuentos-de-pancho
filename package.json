{
  "name": "cuentos-de-pancho",
  "version": "1.0.0",
  "description": "Habilidad de Alexa para escuchar cuentos de Pancho Madrigal",
  "main": "dist/server.js",
  "engines": {
    "node": "12.18.3"
  },
  "scripts": {
    "heroku-prebuild": "npm install voxa",
    "preinstall": "npm install voxa",
    "dev": "ts-node-dev -r tsconfig-paths/register src/server.ts",
    "stage": "ngrok http 3002",
    "transpile": "tsc",
    "optimize": "webpack",
    "build": "npm run transpile && npm run optimize",
    "start": "pm2-runtime start dist/server.bundle.js -i 4 --name m2",
    "test": "jest",
    "lint": "ts-standard",
    "fix": "ts-standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victorstein/cuentos-de-pancho.git"
  },
  "keywords": [
    "Alfonso",
    "Gomez",
    "Nicaragua",
    "Alexa",
    "cuentos",
    "pancho",
    "madrigal"
  ],
  "author": "Alfonso Gomez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/victorstein/cuentos-de-pancho/issues"
  },
  "homepage": "https://github.com/victorstein/cuentos-de-pancho#readme",
  "dependencies": {
    "@sentry/node": "^5.29.2",
    "@sentry/tracing": "^5.29.2",
    "aws-sdk": "^2.820.0",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-sslify": "^1.2.0",
    "helmet": "^4.3.1",
    "pm2": "^4.5.1",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.8.0",
    "uuid": "^8.3.2",
    "voxa": "^3.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/express-sslify": "^1.2.1",
    "@types/node": "^14.14.16",
    "@types/webpack-node-externals": "^2.5.0",
    "ngrok": "^3.4.0",
    "ts-node-dev": "^1.1.1",
    "ts-standard": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.0",
    "webpack-node-externals": "^2.5.2"
  },
  "ts-standard": {
    "ignore": [
      "build",
      "_transpiled",
      "webpack.config.ts"
    ]
  }
}
